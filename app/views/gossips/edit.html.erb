<h4>Edit Gossip></h4>

<%= form_for @gossip do |f| %>
  <div class="form-group">
  	<label>Gossip Author</label>
  	<%= f.text_field :anonymous_author, class: 'form-control'%>
  </div>	
  <div class="form-group">	
  	<label>Gossip content</label>
  	<%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
  	<button type="submit" class="btn btn-primary">Edit Gossip</button>
  </div>
<% end %>  
